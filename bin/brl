#!/bin/bash

# Script to run Brilliant in current directory
# Author: Eirik Marthinsen

# Set the correct path for the Brilliant executable
brlpath="D:/brilliant/Run"

workdir=$(cygpath -w $PWD)
cd $(cygpath -u $brlpath)
echo $workdir | iconv -t ISO-8859-1 | cat - Brilliant.ini > tmp && mv tmp Brilliant.ini
./Brilliant.exe %nowait $*
sed -i '1d' Brilliant.ini
